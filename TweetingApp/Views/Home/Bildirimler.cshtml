@model TweetingApp.Models.AnasayfaModel
@{
    ViewBag.Title = "Twitter / Bildirimler";
}

<br />
<div class="row">
    <br />
    @*1.Sutun*@
    <div class="col-xs-3" style="background-color:white">
     
        <div class="list-group" style="background-color:white">
            <center>
                <table>
                    <tr>
                        <div class="flex-module-header;list-group-item;form-inline">
                            <br />
                            <span class="trend-location js-trend-location" style="font-size:18px">Gündem</span>
                            <span class="middot" area-hidden="true">.</span>


                            <a role="button" herf="#" data-modal="change-trends" class="btn-link change-trends js-trend-toggle">
                                <span aria-hidden="true" style="font-size:13px"> Degistir</span></span>
                            </a>
                        </div>
                    </tr>
                </table>
            </center>

     </div>

        @foreach (Tweetinvi.Models.ITrend item in Model.Trendler)
        {


            <a href="/Home/Gundem?query=@item.Query" class="list-group-item" style="border-style:none;font-style:unset;font-family:'Arial Rounded MT'; color:#00a0d1">
                <b>@item.Name</b>
                @item.PromotedContent
            </a>

        }
        </div>




    @*2.sutun*@

    <div class="col-xs-6">

        <div class="well well-sm" style="background-color:white">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">


            <div class="w3-bar w3-blue">
                <button class="w3-bar-item w3-button" onclick="openCity('Begenenler')">Beğenenler</button>
                <button class="w3-bar-item w3-button" onclick="openCity('Retweetler')">Retweetler</button>
                <button class="w3-bar-item w3-button" onclick="openCity('Takip_istekleri')">Takip İstekleri</button>
            </div>

            <div id="Begenenler" class="w3-container city">
               <br />
                <h2 style="font-size:24px">Tweetlerinizi beğenenler</h2>

            </div>

            <div id="Retweetler" class="w3-container city" style="display:none">
               <br />
                 <h2 style="font-size:24px">Retweetler</h2>
                @foreach (var item in Model.Retweetleyenler)
                {
                    @item.ToString();
                   
                }
            </div>

            <div id="Takip_istekleri" class="w3-container city" style="display:none">
                <br />
                <h2 style="font-size:24px">Takip İstekleriniz</h2>
               
                
                @foreach (Tweetinvi.Models.IUser item in Model.BildirimRequest)
                {
                    <div class="col-xs-6 col-md-4">
                        <div class="well" style="width:250px;height:350px">

                            <img src="@item.ProfileBannerURL" class="img-rounded" width="208" height="100"></img>
                            <a href="#"> <img class="img-circle" src="@item.ProfileImageUrl" data-holder-rendered="true" style="width:70px;height:70px;position:absolute;top:75px;left:50px" usemap="#planetmap"></a>
                            <br /><br /><br />
                            <a href="/Home/Profil/@item.ScreenName"><button class="list-group-item;form-inline" style="border-style:none;background-color :transparent;color:black;font-size:16px;border-style:none"><b>@item.Name</b></button></a>
                            <a href="/Home/Profil/@item.ScreenName"> <button class="list-group-item" style="border-style:none; background-color:transparent;font-size:11px;border-style:none">@item.ScreenName</button></a>
                            <label href="#" class="list-group-item" style="border-style:none; background-color:transparent;font-size:11px;border-style:none">@item.Description</label>
                            <input style="background-color:white;color:#00a0d1" type="button" value="Kabul et" class="btn btn-default" onclick="location.href='@Url.Action("Bildirimler", "Home")'"></input>
                            <input style="background-color:white;color:red" type="button" value="Reddet" class="btn btn-danger" onclick="location.href='@Url.Action("Bildirimler", "Home")'"></input>



                        </div>
                    </div>
                }
            </div>

            <script>
    function openCity(cityName) {
    var i;
    var x = document.getElementsByClassName("city");
    for (i = 0; i < x.length; i++) {
       x[i].style.display = "none";
    }
    document.getElementById(cityName).style.display = "block";
}
            </script>
        </div>
      
        </div>




    @*3.sutun*@

    <div class="col-xs-3" style="background-color:white">
        <div class="well well-xs" style="background-color:white;border-style:none">
